@using la_mia_pizzeria_static.data
@model List<Pizze>
@{
    ViewData["Title"] = "Home Page";
    Layout = null;

    ListaPizze pizzeliste = new ListaPizze();
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<div class="text-center">

    <div class="container ">
    @{

        foreach (Pizze PizzeTavolo in pizzeliste.PizzeList)
        {

            <div class="card m-5" style="width: 18rem;">
                <img src=@Url.Content(PizzeTavolo.UrlFoto) />
                <div class="card-body">
                    <h5 class="card-title">@PizzeTavolo.Nome</h5>
                    <p class="card-text">@PizzeTavolo.Descrizione</p>
                    <p>Prezzo @PizzeTavolo.Prezzo</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            }
            }
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
